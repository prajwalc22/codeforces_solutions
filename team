#include <iostream>
using namespace std;
int main()
{

    int n;
    cin >> n;
    int total = 0;
    for (int i = 0; i < n; i++)
    {
        int first, second, third;
        cin >> first >> second >> third;

        int sum = first + second + third;

        if (sum >= 2)
        {
            total++;
        }

    }
     cout << total << endl;
}
