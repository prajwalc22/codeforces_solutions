#include <iostream>
using namespace std;
int main()
{

    int n;
    cin >> n;
    int value = 0;

    for (int i = 0; i < n; i++)
    {
        string s1;
        cin >> s1;

        if (s1 == "X++" || s1 == "++X")
        {
            value++;
        }

        else
        {
            value--;
        }
    }
   cout<<value<<endl;
}
