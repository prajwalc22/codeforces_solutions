#include <iostream>
using namespace std;
int main()
 
{
    string inp_str;
    cin >> inp_str;
    string result = "";
 
    for (int i = 0; i < inp_str.length(); i++)
    {
        if (i + 1 < inp_str.length() && inp_str.substr(i, 2) == "--")
        {
            result += "2";
            i++;
        }
        else if (i + 1 < inp_str.length() && inp_str.substr(i, 2) == "-.")
        {
            result += "1";
            i++;
        }
        else if (inp_str[i] == '.')
 
        {
            result += "0";
        }
    }
    cout << result << endl;
}
