#include <iostream>
using namespace std;
int main()
{

    int n;
    cin >> n;

    for (int i = 0; i < n; i++)
    {
        string word;
        cin >> word;
        
        if(word.length()<=10){
            cout<<word<<endl;
        }
        
        else{
        

        char first_char = word[0];
        char last_char = word[word.length() - 1];
        int in_between = word.length() - 2;

        cout << first_char << in_between << last_char << endl;
        }
       

        
    }
}
